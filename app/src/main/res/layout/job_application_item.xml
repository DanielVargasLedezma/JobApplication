<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >

        <ImageView
                android:id="@+id/imagenJobApp"

                android:layout_width="150dp"
                android:layout_height="150dp"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/applicationbig"/>

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineStart"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_begin="155dp"
        />

        <TextView
                android:id="@+id/applicantName"

                android:drawableStart="@drawable/form_icon"
                android:drawablePadding="5dp"

                tools:text="AplicaciÃ³n de "
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:layout_constraintStart_toEndOf="@+id/guidelineStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
        />

        <TextView
                android:id="@+id/applicantEmail"

                android:drawableStart="@drawable/ic_email_svgrepo_com"
                android:drawablePadding="5dp"

                tools:text="Applicant email"
                android:layout_marginTop="5dp"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_bias="0.1"

                app:layout_constraintStart_toEndOf="@+id/guidelineStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/applicantName"
        />

        <TextView
                android:id="@+id/applicantProfesion"

                android:drawableStart="@drawable/ic_work_bag_svgrepo_com"
                android:drawablePadding="5dp"
                tools:text="Applicant profession"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_bias="0.1"
                android:layout_marginTop="5dp"

                app:layout_constraintStart_toEndOf="@+id/guidelineStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/applicantEmail"
        />

        <TextView
                android:id="@+id/applicantPhone"

                android:drawableStart="@drawable/phone_icon"
                android:drawablePadding="5dp"
                tools:text="Applicant phone"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_bias="0.1"
                android:layout_marginTop="5dp"

                app:layout_constraintStart_toEndOf="@+id/guidelineStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/applicantProfesion"
        />

        <TextView
                android:id="@+id/applicantUserName"

                android:drawableStart="@drawable/user_icon_recycler_2"
                android:drawablePadding="5dp"

                tools:text="NombreUsuario"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>